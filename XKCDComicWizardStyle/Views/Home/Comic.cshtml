@{
    //ViewData["Title"] = "Home Page";
    Comic comic = ViewBag.Position;
    int curNum = comic.Num;
    int maxNum = ViewBag.Settings;
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card mb-4 shadow-sm">
            @if (!string.IsNullOrEmpty(comic.Img))
            {
                <img src="@comic.Img" class="bd-placeholder-img card-img-top" width="100%" height="325" />
            }
            else
            {
                <svg class="bd-placeholder-img card-img-top" width="100%" height="325" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
                    <title>Placeholder</title>
                    <rect width="100%" height="100%" fill="#55595c"></rect>
                    <text x="50%" y="50%" fill="#eceeef" dy=".3em">Not Image</text>
                </svg>
            }

            <div class="card-body">
                <p class="card-text">@comic.Alt</p>
                <p class="card-text">
                    <button type="button" class="btn btn-sm btn-secondary">
                        Image <span class="badge badge-light"> @comic.Num</span>
                    </button>
                </p>

                <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                        @{
                            if (curNum > 1)
                            {
                                <a asp-controller="Home" asp-action="Comic" asp-route-id="1" class="btn btn-sm btn-outline-secondary">|&#60; First<i class="fa fa-caret-square-o-left" aria-hidden="true"></i></a>
                                <a asp-controller="Home" asp-action="Comic" asp-route-id="@(curNum-1)" asp-route-preview="true" class="btn btn-sm btn-outline-secondary"><i class="fa fa-caret-left" aria-hidden="true"></i>&#60;&#60;Previous</a>
                            }
                            if (curNum >= 1 && curNum < maxNum)
                            {
                                <a asp-controller="Home" asp-action="Comic" asp-route-id="@(curNum+1)" class="btn btn-sm btn-outline-secondary">Next&#62;&#62;<i class="fa fa-caret-right" aria-hidden="true"></i></a>
                            }
                            if (curNum < maxNum)
                            {
                                <a asp-controller="Home" asp-action="Comic" asp-route-id="@maxNum" class="btn btn-sm btn-outline-secondary">Last&#62;|<i class="fa fa-caret-square-o-right" aria-hidden="true"></i></a>
                            }
                        }
                    </div>
                    <small class="text-muted font-weight-bold">@comic.Title</small>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form action="/Comic/" method="get">
            <div class="input-group mb-3">
                <input name="id" id="id" type="text" class="form-control" placeholder="Comic Number" aria-label="Comic Number" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-warning" type="button" id="button-addon2">Find</button>
                </div>
            </div>
        </form>
    </div>
</div>